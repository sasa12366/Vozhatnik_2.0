<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:scrollbars="none">


    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="149dp"
                android:layout_height="125dp"
                android:focusable="true"
                android:onClick="showMinimobile"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/mini" />

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="147dp"
                android:layout_height="127dp"
                android:layout_marginTop="0dp"
                android:onClick="showAnalis"

                android:scaleType="centerInside"
                app:srcCompat="@drawable/plan" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="143dp"
                android:layout_height="56dp"
                android:text="Миникопилка Вожатого"
                android:textSize="20sp" />

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="143dp"
                android:layout_height="56dp"
                android:text="Анализ смены"
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="149dp"
                android:layout_height="125dp"
                android:focusable="true"
                android:onClick="showDetachment"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/otryd2" />

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="147dp"
                android:layout_height="127dp"
                android:layout_marginTop="0dp"
                android:onClick="showGame"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/igry2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мой отряд"
                android:textSize="20sp" />

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="144dp"
                android:layout_height="44dp"
                android:text="Игры"
                android:textSize="20sp" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="143dp"
                android:layout_height="129dp"

                android:onClick="showMysic"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pessenik2" />

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="147dp"
                android:layout_height="130dp"
                android:onClick="showForum"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/forum" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Песенник"
                android:textSize="20sp" />

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="143dp"
                android:layout_height="56dp"
                android:text="Вожатский форум"
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addButton" />

</LinearLayout>